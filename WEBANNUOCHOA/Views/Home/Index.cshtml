@model IEnumerable<WEBANNUOCHOA.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}
<!-- Slide -->
<div class="container-fluid px-0">
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/slide/slider 1.jpg" class="d-block w-100" alt="Nước hoa nam chính hãng - Three Friends">
            </div>
            <div class="carousel-item">
                <img src="~/images/slide/slider 2.jpg" class="d-block w-100" alt="Nước hoa nam chính hãng - Three Friends">
            </div>
            <div class="carousel-item">
                <img src="~/images/slide/slider 3.jpg" class="d-block w-100" alt="Nước hoa nam chính hãng - Three Friends">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="pb-4 fw-bold" style="font-family: sans-serif;">Tất cả sản phẩm</h1>
            </div>
            
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="block__card img-thumbnail">
                        <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity">
                            <img src="@item.ImageUrl" class="img-fluid img__cart" alt="@Html.DisplayFor(modelItem => item.Name)">
                            <div class="btn btn-dark btn__cart">THÊM VÀO GIỎ HÀNG</div>
                        </a>

                        <div class="card-body card-body--item text-center pt-0 mt-0 pb-2">
                            <div class="block__star pb-2 text-warning">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                            </div>
                            <a class="text-decoration-none text-dark" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity">
                                <h5 class="card-title fw-bold">@Html.DisplayFor(modelItem => item.Name)</h5>
                            </a>
                            <div class="d-flex justify-content-center">
                                <p class="fs-5 mb-1">@item.Price.ToString("#,##0") VNĐ</p>
                            </div>
                        </div>
                    </div>
                </div>
                
            }
        </div>
    </div>
</section>
