<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website Bán Hàng</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap icons-->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEBANNUOCHOA.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar  navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow py-4 " style="background-color: black;">
                    <div class="container">
                        <!-- Logo-brand -->
                        <a class="navbar-brand fw-bolder fs-4 text-light " asp-area="" asp-controller="Home" asp-action="Index">THREE FRIENDS</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <i class="bi bi-list text-light fs-1"></i>
                        </button>

                        <!-- Nav-link: Home / Privacy / All Product -->
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 justify-content-center z-n1">
                                <li class="nav-item">
                                    <a class="nav-link text-light fw-bold gachngang" asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light fw-bold gachngang" asp-area="" asp-controller="Home" asp-action="Privacy">Chính Sách</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light fw-bold gachngang" asp-area="" asp-controller="NonProduct" asp-action="Index">Sản Phẩm</a>
                                </li>
                            </ul>

                            <!-- Register / Login -->
                            <partial name="_LoginPartial" />

                            <!-- Cart-->
                            <div class="block__cart">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link p-0" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                                            <i class="bi bi-bag-check text-light fs-4"></i>
                                        </a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </nav>

            </div>
        </div>
    </div>

    @* Body *@
    <div class="container-fluid px-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Fixed Action Button -->
    <div class="icon">
        <a href="#top"><i class="bi bi-chevron-up"></i></a>
    </div>

    @* Footer *@
    <div class="container-fluid px-0" style="background-color: black;">
        <div class="container">
            <div class="row py-5 justify-content-center">
                @* Title - Info *@
                <div class="col-md-2" style="width: 250px;">
                    <p class="fw-bolder fs-4 pb-4 text-light" style="font-family: fantasy;">THREE FRIENDS</p>
                    <p class="pb-3 text-light"><strong>Phone: </strong>0123456789</p>
                    <p class="pb-3 text-light"><strong>Email: </strong>threefriends@gmail.com</p>
                    <div class="footer__icon--MXH">
                        <i class="bi bi-facebook text-light"></i>
                        <i class="bi bi-twitch px-3 text-light"></i>
                        <i class="bi bi-youtube pe-3 text-light"></i>
                        <i class="bi bi-instagram text-light"></i>
                    </div>
                </div>
                @* Infomation *@
                <div class="col-md-2">
                    <p class="fw-bold text-light">INFORMATION</p>
                    <p class="text-light mb-1">About Us</p>
                    <p class="text-light mb-1">Contact Us</p>
                    <p class="text-light mb-1">Career</p>
                    <p class="text-light mb-1">My Account</p>
                    <p class="text-light mb-1">Orders and Returns</p>
                </div>
                @* Quick Shop *@
                <div class="col-md-2">
                    <p class="fw-bold text-light">QUICK SHOP</p>
                    <p class="text-light mb-1">Perfume</p>
                    <p class="text-light mb-1">Men</p>
                    <p class="text-light mb-1">Girl</p>
                    <p class="text-light mb-1">Best Seller</p>
                </div>
                @* Customer Service *@
                <div class="col-md-2">
                    <p class="fw-bold text-light">CUSTOMER SERVICES</p>
                    <p class="text-light mb-1">Help & FAQs</p>
                    <p class="text-light mb-1">Returns Policy</p>
                    <p class="text-light mb-1">Terms & Conditions</p>
                    <p class="text-light mb-1">Privacy Policy</p>
                    <p class="text-light mb-1">Support Center</p>
                </div>
                @* Newsletter *@
                <div class="col-md-2 ">
                    <p class="fw-bold text-light">NEWSLETTER</p>
                    <p class="text-light mb-3">Enter your email to receive daily news and get 20% off coupon for all items.</p>
                    <input type="text" placeholder="Địa chỉ email" class="ps-2 py-2" style="outline:none; border: none;" />
                    <a class="bg-success text-decoration-none text-light d-inline-block mt-2 px-3 fw-bold newsletter" style="font-size: 13px; transition: 0.3s; cursor: pointer; padding-top: 9px; padding-bottom: 9px;">SUBSCRIBE</a>
                </div>
            </div>
            @* hr *@
            <div class="row justify-content-center">
                <div class="col-md-11">
                    <hr class="text-light" />
                </div>
            </div>
            @* Copyright *@
            <div class="row">
                <div class="col-md-12">
                    <p class="text-center text-light">© 2024 Three Friends. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </div>

    @* Import JS *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
