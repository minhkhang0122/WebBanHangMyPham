@model ShoppingCart

<h2>Your Cart</h2>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Action</th>
    </tr>
    <form class="d-flex">
        <button class="btn btn-outline-dark" type="submit" asp-area="" asp-controller="ShoppingCart" asp-action="Checkout">
            Check Out
        </button>
    </form>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@(item.Price * item.Quantity)</td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId"><button class="btn btn-primary">Remove</button></a>
                <a asp-controller="NonProduct" asp-action="Index" ><button class="btn btn-primary">Trở về</button></a>

            </td>
        </tr>

    }
</table>
<p><b>Total Price: @Model.TotalPrice</b></p>

