@page
@model LoginModel

@{
    ViewData["Title"] = "ĐĂNG NHẬP";
}


<div class="container-fluid">
    <div class="row py-5">
        <div class="col-md-6 d-flex align-items-center border-end">
            <p class="login--title fw-bold">@ViewData["Title"]</p>
        </div>
        <div class="col-md-6">
            <section>
                <form id="account" method="post" style="padding: 40px 80px;">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <p>Địa chỉ email *</p>
                        <input asp-for="Input.Email" class="form-control py-0 px-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        @* <label asp-for="Input.Email" class="form-label">Email</label> *@
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p>Mật khẩu *</p>
                        <input asp-for="Input.Password" class="form-control py-0 px-3" autocomplete="current-password" aria-required="true" placeholder="password" />
                        @* <label asp-for="Input.Password" class="form-label">Password</label> *@
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg rounded-pill fw-bold text-light">ĐĂNG NHẬP</button>
                    </div>
                    <div>
                        <p class="pt-3">
                            <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                        </p>
                        @* <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p> *@
                    </div>
                </form>
            </section>
        </div>
