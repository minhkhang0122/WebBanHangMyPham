@page
@model RegisterModel
@{
    ViewData["Title"] = "ĐĂNG KÝ";
}


<div class="container-fluid">
    <div class="row py-5">
        <div class="col-md-6 d-flex align-items-center border-end">
            <p class="login--title fw-bold">@ViewData["Title"]</p>
        </div>
        <div class="col-md-6">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="padding: 80px 80px;">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <p>Họ và tên *</p>
                    <input asp-for="Input.FullName" class="form-control py-0 px-3" autocomplete="fullname" aria-required="true" />
                    @* <label asp-for="Input.FullName">FullName</label> *@
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <p>Địa chỉ email *</p>
                    <input asp-for="Input.Email" class="form-control py-0 px-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    @* <label asp-for="Input.Email">Email</label> *@
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <p>Mật khẩu *</p>
                    <input asp-for="Input.Password" class="form-control py-0 px-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                    @* <label asp-for="Input.Password">Password</label> *@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <p>Xác nhận mật khẩu *</p>
                    <input asp-for="Input.ConfirmPassword" class="form-control py-0 px-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                    @* <label asp-for="Input.ConfirmPassword">Confirm Password</label> *@
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <p>Vai trò *</p>
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control py-0">
                        <option disabled selected>- Chọn vai trò -</option>
                    </select>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg rounded-pill fw-bold text-light mt-4">ĐĂNG KÝ</button>
            </form>
        </div>
