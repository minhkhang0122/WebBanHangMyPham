@model IEnumerable<WebBanHangMyPham.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Danh sách sản phẩm</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
            <th>Hình ảnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.Category?.Name</td>
                <td>
                    @if (product.ImageUrl != null)
                    {
                        <img src="@product.ImageUrl" width="100px" height="100px"/>
                    }
                </td>
                
            </tr>
        }
    </tbody>
</table>
